// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  hashedPassword String?  @map("hashed_password")
  image         String?
  role          String    @default("USER")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  salePrice   Float?  @map("sale_price")
  imageUrl    String   @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  images      ProductImage[]
  features    ProductFeature[]

  // Optional manual offer prices
  offer2OriginalPrice Float? @map("offer2_original_price")
  offer2SalePrice     Float? @map("offer2_sale_price")
  offer3OriginalPrice Float? @map("offer3_original_price")
  offer3SalePrice     Float? @map("offer3_sale_price")

  @@map("products")
}

model ProductImage {
  id          Int      @id @default(autoincrement())
  productId   Int      @map("product_id")
  url         String
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
}

model ProductFeature {
  id          Int      @id @default(autoincrement())
  productId   Int      @map("product_id")
  title       String
  imageUrl    String   @map("image_url")
  description String   @db.Text
  order       Int      @default(0)

  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_features")
}

enum OrderStatus {
  PENDING
  LIVREE
  RETOUR
  ANNULEE
}

model Order {
  id             Int          @id @default(autoincrement())
  productId      Int
  name           String
  phone          String
  address        String
  governor       String
  city           String
  pack           Int
  total          Float
  status         OrderStatus  @default(PENDING)
  phoneConfirmed Boolean      @default(false)
  createdAt      DateTime     @default(now())
}
